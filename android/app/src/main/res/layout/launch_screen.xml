<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:layout_centerInParent="true"
            android:id="@+id/iv_main_splash_image"
            android:src="@drawable/background_splash" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@id/iv_main_splash_image"
            android:textColor="@color/text_green_volor"
            android:text="food delivery from \n singapres best restaurants"
            android:textAllCaps="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="The meals you love, \n delivered with care"
            android:layout_margin="40dp"
            android:padding="10dp"
            android:textStyle="bold"
           android:layout_alignParentBottom="true"
            android:textColor="@color/text_green_volor"
            android:textAllCaps="true" />
    </RelativeLayout>
</LinearLayout>